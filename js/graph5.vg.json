{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 450,
  "background": "whitesmoke",
  "title": "New york map of Airbnbs",
  "projection": {
    "type": "azimuthalEqualArea",
    "rotate": [
      74,
      0,
      0
    ]
  },
  "signals": [
    {
      "name": "selected",
      "value": null,
      "on": [
        {
          "events": "symbol:mouseover",
          "update": "datum"
        },
        {
          "events": "symbol:mouseout",
          "update": "null"
        }
      ]
    },
    {
      "name": "title",
      "value": "U.S. Airports, 2008",
      "update": "hover ? hover.name : 'Points of interest'"
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/new_york_map2.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_2_counties"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/Airbnb_Open_Data.csv"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/pointsofinterest.csv"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "color": {
          "value": "red"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "interactive": false,
        "encode": {
          "enter": {
            "x": {
              "value": 450
            },
            "y": {
              "value": 20
            },
            "fill": {
              "value": "black"
            },
            "fontSize": {
              "value": 20
            },
            "align": {
              "value": "right"
            }
          },
          "update": {
            "text": {
              "signal": "title"
            }
          }
        }
      }
    }
  ]
}