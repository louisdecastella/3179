{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 450,
  "background": "whitesmoke",
  "title": "distance to points of interest",
  "projection": {
    "type": "azimuthalEqualArea",
    "rotate": [
      74,
      0,
      0
    ]
  },
  "layer": [
    {
      "data": {
        "name": "map",
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/new_york_map2.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_2_counties"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "name": "boroughs",
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/boroughs.csv"
      },
      "mark": "text",
      "encoding": {
        "text": {
          "field": "location",
          "type": "nominal"
        },
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "value": 10
        },
        "opacity": {
          "value": 0.6
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "#000",
        "opacity": 0.35
      },
      "data": {
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/distances.csv"
      },
      "transform": [
        {
          "filter": {
            "param": "org",
            "empty": false
          }
        },
        {
          "lookup": "ID",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/Airbnb_Open_Data.csv"
            },
            "key": "ID",
            "fields": [
              "Latitude",
              "Longitude"
            ]
          }
        },
        {
          "lookup": "poi",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/pointsofinterest.csv"
            },
            "key": "Name",
            "fields": [
              "latitude",
              "longitude"
            ]
          },
          "as": [
            "lat2",
            "lon2"
          ]
        }
      ],
      "encoding": {
        "latitude": {
          "field": "Latitude"
        },
        "longitude": {
          "field": "Longitude"
        },
        "latitude2": {
          "field": "lat2"
        },
        "longitude2": {
          "field": "lon2"
        }
      }
    },
    {
      "data": {
        "name": "airbnb",
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/Airbnb_Open_Data.csv"
      },
      "mark": "circle",
      "params": [
        {
          "name": "org",
          "select": {
            "type": "point",
            "on": "mouseover",
            "nearest": true,
            "fields": [
              "ID"
            ]
          }
        }
      ],
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        }
      }
    },
    {
      "data": {
        "name": "pointsofinterest",
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/pointsofinterest.csv"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "color": {
          "value": "red"
        }
      }
    }
  ]
}