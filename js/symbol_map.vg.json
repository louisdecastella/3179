{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "New york map of Airbnbs",
  "projection": {"type": "azimuthalEqualArea", "rotate": [74, 0, 0]},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/new_york_map2.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_admin_2_counties"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/Airbnb_Open_Data.csv"
      },
      
     "params": [
       { 
         "name": "room type",
         "bind": {
          "input": "select",
           "options": [
             null,
             "Entire home/apt",
             "Private room",
             "Shared room"
           ],
            "labels": [
             "Show all",
             "Entire home/apt",
             "Private room",
             "Shared room"
           ],
           "name": "room rype"
         }
       }
     ], 
     "mark":"circle",
     "transform": [
       {
         "filter": "room type == null || datum.room type == room type"
       }
     ],

      "encoding": {
        "longitude": {"field": "longditude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "color": {
          "field": " price ",
          "type": "quantitative",
          "title": "Price",
          "scale": {"scheme": "reds"}
        },
        "tooltip": [
{"field": "NAME", "type": "nominal"},
{"field": "room type", "type": "nominal"},
{"field": "neighbourhood", "type": "nominal"},
{"field": " price ", "type": "nominal"}

]

      }
    }
  ]
}