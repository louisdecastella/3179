{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 350,
  "background":"whitesmoke",
  "title": "New york map of Airbnbs",
  "projection": {
    "type": "azimuthalEqualArea",
    "rotate": [
      74,
      0,
      0
    ]
  },
  "params": [
    {
      "name": "Price",
      "value": 50,
      "bind": {
        "input": "range",
        "min": 50,
        "max": 1200,
        "step": 1,
        "name": "Price Higher than: "
      }
    },
    {
      "name": "Host_identity_verified",
      "bind": {
        "input": "select",
        "options": [
          null,
          "verified"
        ],
        "labels": [
          "All",
          "Verified only"
        ],
        "name": "Verified Host? "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/new_york_map2.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_2_counties"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/louisdecastella/3179/main/data/Airbnb_Open_Data.csv"
      },
      "transform": [
        {
          "filter": "datum.Price >= Price"
        },
        {
          "filter": "Host_identity_verified == null || datum.Host_identity_verified == Host_identity_verified"
        }
      ],
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "color": {
          "field": "Price",
          "type": "quantitative",
          "title": "Price",
          "scale": {
            "scheme": "reds",
            "domain": [
              0,
              1200
            ]
          }
        },
        "opacity": {
          "value": 1
        },
        "tooltip": [
          {
            "field": "NAME",
            "type": "nominal",
            "title": "Name Of Airbnb"
          },
          {
            "field": "Room_Type",
            "type": "nominal",
            "title": "Room Type"
          },
          {
            "field": "Neighbourhood",
            "type": "nominal"
          },
          {
            "field": "Price",
            "type": "nominal",
            "title": "Price: $"
          }
        ]
      }
    }
  ]
}